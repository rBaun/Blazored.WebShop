@using Microsoft.AspNetCore.Components.Routing

@if (Order != null)
{
<tr>
    <td>
        @if (Order.OrderPlacedOn.HasValue)
        {
            @Order.OrderPlacedOn.ToString();
        }
    </td>
    <td>
        @if (!Order.OrderFinishedOn.HasValue)
        {
            <NavLink href="@($"order-details/{Order.OrderId}")">
                @Order.OrderId
            </NavLink>
        }
        else
        {
            @Order.OrderId
        }
    </td>
    <td>@Order.CustomerCountry</td>
    <td>@Order.CustomerStateProvince</td>
    <td>@Order.CustomerCity</td>
    <td>@Order.CustomerName</td>
</tr>
}