@if (Orders.Any() && Orders != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date Placed</th>
                <th>Order Id</th>
                <th>Country</th>
                <th>State / Province</th>
                <th>City</th>
                <th>Customer Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Orders)
            {
                <OrderItemComponent Order="order"></OrderItemComponent>
            }
        </tbody>
    </table>
}