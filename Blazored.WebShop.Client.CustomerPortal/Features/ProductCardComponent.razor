@if (Product != null)
{
    <div class="card" style="width: 362px; height: 775px;">
        <img class="card-img-top" 
             src="@Product.ImageUrl" 
             alt="@Product.Name - @Product.Brand"
             style="min-height: 362px; min-width: 180px; object-fit: cover">
        <div class="d-flex flex-column card-body">
            <h5 class="card-title">@Product.Name</h5>
            <p class="card-text">@Product.Description</p>
            <h3 class="text-danger">@Product.Price Kr</h3>
            <a href="@($"product/{Product.ProductId}")" class="mt-auto btn btn-primary">View Details</a>
        </div>
    </div>
}
else
{
    <h5 class="align-middle">Loading...</h5>
}