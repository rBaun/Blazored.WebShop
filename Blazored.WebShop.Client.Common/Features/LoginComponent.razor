@using Microsoft.AspNetCore.Components.Forms

<h3>Login</h3>


@if (_loginViewModel != null)
{
<EditForm Model="_loginViewModel" OnValidSubmit="HandleValidLogin">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <div class="form-group row">
        <label for="username">Username</label>
        <InputText id="username" @bind-Value="_loginViewModel.Username" class="form-control" />
    </div>

    <div class="form-group row">
        <label for="password">Username</label>
        <InputText id="password" type="password" @bind-Value="_loginViewModel.Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>
}